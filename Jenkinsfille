pipeline {
    agent any

    stages {
        stage('build') {
               agent {
        docker {
            image 'node:20.14.0'
            reuseNode true
        }
    }

    steps {
        sh '''
            ls -la
            node --version
            npm --version
            npm install --package-lock-only
            npm ci 
            npm run build
            ls -la 
        '''
    }
        }

        stage('test'){
            steps{
                sh '''
                echo "Test Stage"
                cd build
                if [ -f index.html ]
                then 
                    echo "index.html is present"
                else 
                    echo "index.html is not present"
                fi
                '''
            }
        }
    }
}
